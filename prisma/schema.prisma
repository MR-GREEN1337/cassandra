
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["nativeDistinct"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model StartupFailure {
  id              Int     @id @default(autoincrement())
  companyName     String  @map("company_name")
  failureReason   String? @map("failure_reason")
  summary         String? @db.Text
  whatTheyDid     String? @map("what_they_did") @db.Text
  whatWentWrong   String? @map("what_went_wrong") @db.Text
  keyTakeaway     String? @map("key_takeaway") @db.Text
  
  sourceUrl       String? @map("source_url")
  
  summary_vector  Unsupported("Vector(1536)")?

  @@map("startup_failures")
}

model SearchFrontier {
  id        Int      @id @default(autoincrement())
  query     String   @unique
  status    Status   @default(pending)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("search_frontier")
}

enum Status {
  pending
  completed
  failed
}